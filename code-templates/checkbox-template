import React from "react";
import { connect } from "react-redux";
import Checkbox from "@material-ui/core/Checkbox";
import * as _ from "lodash";

const Component = (props) => (
    <Checkbox id="%componentName%-checkbox" checked={props.boundValue} onChange={_.debounce(props.update, 1000)} />
);

const boundPropertyName = "%bind%";

const connected = connect((state) => {
    const boundValue = _.get(boundPropertyName, state);
    return {
        boundValue
    };
}, dispatch => {
    const update: _.debounce((value) => {
        dispatch({ type: "SET", path: boundPropertyName, value: value});
    });
    return {
        update: (event) => {
            update(event.target.value);
        }
    };
})(Component);

export default connected;