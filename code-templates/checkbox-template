import React from "react";
import { connect } from "react-redux";
import Checkbox from "@material-ui/core/Checkbox";
import * as _ from "lodash";

const Component = (props) => (
    <Checkbox id="${componentName}-checkbox" checked={props.boundValue} onChange={props.update} />
);

// The property on the state object that the component is bound to.
const boundProperty =  ${bind};
// The optional expression to set the value of the component.
const boundExpression = ${value};
const readOnly = ${readOnly};

const connected = connect((state) => {
    const boundValue = (()=>{
        if (boundProperty){
            return _.get(state, boundProperty);
        } else {
            return _.template(boundExpression)(state);
        }
    })();
    return {
        boundValue
    };
}, dispatch => {
    const update = _.debounce((value) => {
        dispatch({ type: "SET", path: boundExpression, value: value});
    });
    return {
        update: (event) => {
            if (!readOnly){
                update(event.target.value);
            }
        }
    };
})(Component);

export default connected;