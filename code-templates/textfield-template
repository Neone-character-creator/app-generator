import React from "react";
import { connect } from "react-redux";
import Textfield from "@material-ui/core/TextField";
import * as _ from "lodash";
%imports%

const Component = (props) => (
    <Textfield id="%componentName%-textfield" label="%label%" value={props.boundValue} onChange={props.update} />
);

const boundExpression = "%bind%";

const connected = connect((state) => {
    const boundValue = _.get(boundExpression, state);
    return {
        boundValue
    };
}, dispatch => {
    const update = _.debounce((value) => {
        dispatch({ type: "SET", path: boundExpression, value: value});
    });
    return {
        update: (event) => {
            update(event.target.value);
        }
    };
})(Component);

export default connected;