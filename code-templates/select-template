import React from "react";
import { connect } from "react-redux";
import Textfield from "@material-ui/core/TextField";
import FormControl from "@material-ui/core/FormControl";
import InputLabel from "@material-ui/core/InputLabel";
import Select from "@material-ui/core/Select";
import * as _ from "lodash";

const Component = (props) => (\
    <FormControl>
    <InputLabel id="%componentName%-select-label">%label%</InputLabel>
    <Select id="%componentName%-select" value={props.boundValue} onChange={props.set}>
        %children%
    </Select>
    </FormControl>
);

const boundPropertyName = "%bind%";

const connected = connect((state) => {
    const boundValue = _.get(boundPropertyName, state);
    return {
        boundValue
    };
}, dispatch => {
    return {
        set: (event) => {
            dispatch({type: "SET", path: boundPropertyName, value: event.target.value});
        }
    }
})(Component);

export default connected;